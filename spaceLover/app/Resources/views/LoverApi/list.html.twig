{% extends 'base.html.twig' %}

{% block body %}

    {% include 'LoverApi/question1.html.twig' %}

    <div class="container">
        <div class="row">
            {% for lover in lovers %}
                <div class="text-center col-md-2">
                    <div class="eaCard mb-2 card">
                        <span class="center-block"><img src="{{ lover.image }}" height="60px" width="60px"></span>
                        <div href="/list/match/{{ lover.id }}" class="eaLoverLink">{{ lover.name }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
