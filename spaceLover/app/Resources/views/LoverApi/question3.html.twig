<form method="get" action="" class="w-50 text-center m-auto form-question pt-3 pb-3">
    <p>quel type de fruit préférés-tu ?</p>
    <div class="d-flex justify-content-around">
        <input type="hidden" name="gender" value="{{ gender }}"/>
        <input type="hidden" name="species" value="{{ species }}"/>
        <div>
            <input type="radio" id="choice1" name="age" value="1">
            <label class="label-question"for="choice1">&nbspBien ferme</label>
        </div>

        <div>
            <input type="radio" id="choice2" name="age" value="2">
            <label class="label-question" for="choice2">&nbspBien mure</label>
        </div>

        <div>
            <input type="radio" id="choice3" name="age" value="3">
            <label class="label-question" for="choice3">&nbspVerreux</label>
        </div>

    </div>
    <input class="btn btn-link submit-question" type="submit" value="Répondre">
</form>